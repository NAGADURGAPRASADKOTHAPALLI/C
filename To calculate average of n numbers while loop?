//To calculate average of n numbers while loop?
#include<stdio.h>
void main()
{
	int n,count=1;
	float x, avg, sum=0;
	printf("enter the value of n:");
	scanf("%d",&n);
	while(count<=n)
	{
		printf("enter %d numbers:",count);
		scanf("%f",&x);
		sum += x;
		++count;
	}
	avg= sum/n;
	
	printf("\n the average is %f",avg);
	
}
