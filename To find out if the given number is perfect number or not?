//To find out if the given number is perfect number or not?
#include<stdio.h>
void main()
{
	int n,sum=0,temp,i=1;
	printf("enter a number:");
	scanf("%d",&n);
	while(i<n)
	{
		if(n%i==0)
		sum=sum+i;
		i++;
	}
	if(n==sum)
	printf("it is a perfect number");
	else 
	printf("it is not a perfect number");
}
